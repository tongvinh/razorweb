@page "/admin/assign-user-role/{id}"
@model App.Admin.User.AddRoleModel
@{
    ViewData["Title"] = "Gán Role";
}

<h3>Thiết lặp role cho: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="RoleNames" class="form-label"></label>
                @Html.ListBoxFor(m => m.RoleNames,@Model.allRoles, new {
                id = "id-select-roles",
                 @class = "w-100" 
                })
                <span asp-validation-for="RoleNames" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-lg btn-primary mb-3">Cập nhật</button>
            <a asp-page="./Index" class="btn btn-lg btn-primary mb-3">Danh sách thành viên</a>
        </form>
        <hr>
        <p>Các claim của user có được từ role:</p>
        @if (Model.claimsInRole.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimsInRole)
                {
                    <li>@claim.ClaimType : @claim.ClaimValue</li>
                }
            </ul>
        }
        <p>Các claim riêng:
            <a asp-page="./EditUserRoleClaim" asp-page-handler="AddClaim" asp-route-userid="@Model.user.Id">+ Thêm claim riêng</a>
        </p>
        @if (Model.claimInUserClaim.Count > 0)
        {
            <ul>
                @foreach (var claim in Model.claimInUserClaim)
                {
                    <li><a asp-page="./EditUserRoleClaim" asp-page-handler="EditClaim" asp-route-claimid="@claim.Id">@claim.ClaimType : @claim.ClaimValue</a></li>
                }
            </ul>
        }
    </div>
</div>

@section Scripts {
<script src="~/lib/multiple-select/multiple-select.min.js"></script>
<link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />

<script>
    $("#id-select-roles").multipleSelect({
        selectAll: false,
        keepOpen: false,
        isOpen: false,
        width:580,
        dropWidth: 580
    });
</script>
<partial name="_ValidationScriptsPartial" />
}
